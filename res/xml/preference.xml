<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <EditTextPreference
        android:key="@string/preference_key_host"
        android:summary="@string/preference_option_host_summary"
        android:title="@string/preference_option_host" />
    <EditTextPreference
        android:key="@string/preference_key_port"
        android:numeric="integer"
        android:summary="@string/preference_option_port_summary"
        android:title="@string/preference_option_port" />

    <CheckBoxPreference
        android:key="@string/preference_key_ssl"
        android:summary="@string/preference_option_ssl_summary"
        android:title="@string/preference_option_ssl" />

    <EditTextPreference
        android:key="@string/preference_key_user"
        android:summary="@string/preference_option_user_summary"
        android:title="@string/preference_option_user" />
    <EditTextPreference
        android:key="@string/preference_key_password"
        android:summary="@string/preference_option_password_summary"
        android:title="@string/preference_option_password" />

</PreferenceScreen>